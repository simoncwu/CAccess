@model Cfb.CandidatePortal.Web.MvcApplication.Areas.Profile.Models.AddressViewModel

<div class="row">
    <div class="col-sm-2">
        @Html.EditorFor(m => m.StreetNumber, new { @readonly = true })
    </div>
    <div class="col-sm-10">
        <div class="row">
            @{
                bool showApt = Model.HasApartment;
                string streetNameClass = showApt ? "col-xs-8 col-sm-9 col-md-10" : "col-xs-12";
            }
            <div class="@streetNameClass">
                @Html.EditorFor(m => m.StreetName, new { @readonly = true })
            </div>
            @if (showApt)
            {
                <div class="col-xs-4 col-sm-3 col-md-2">
                    @Html.EditorFor(m => m.Apartment, new { @readonly = true })
                </div>
            }
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        @Html.EditorFor(m => m.City, new { @readonly = true })
    </div>
    <div class="col-sm-6">
        <div class="row">
            <div class="col-xs-6 col-sm-7 col-md-8">
                @Html.EditorFor(m => m.StateCode, new { @readonly = true })
            </div>
            <div class="col-xs-6 col-sm-5 col-md-4">
                @Html.EditorFor(m => m.Zip, new { @readonly = true })
            </div>
        </div>
    </div>
</div>