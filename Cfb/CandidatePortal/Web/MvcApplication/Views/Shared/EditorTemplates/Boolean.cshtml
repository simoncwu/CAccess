@model bool?
@{
    bool disabled = ViewData.ContainsKey("readonly");
}
<div class="checkbox@(disabled ? " disabled" : null)@(ViewData.ContainsKey("class")? " " + ViewData["class"] : null)">
    <label class="control-label">
        @if (ViewData.ModelMetadata.IsReadOnly)
            {
                string classval = Model.Value ? "ok" : "remove";
            <span class="glyphicon glyphicon-@classval"></span>
        }
        else
        {
            var htmlAttr = new Dictionary<string, object>();
            string attr = "disabled";
            if (disabled)
            {
                htmlAttr[attr] = attr;
            }
            @Html.CheckBox("", Model.HasValue && Model.Value, htmlAttr)
        }
        @Html.DisplayNameFor(m => m)
    </label>
</div>